<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="5dp" style="@style/AppTheme.CardView">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:paddingLeft="5dp" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <com.cuvora.carinfo.views.AsyncImageView android:id="@+id/iv_car" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_recent_search_car" android:scaleType="fitCenter" />
            <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_weight="1">
                <TextView android:textSize="@dimen/text_size_medium_2" android:textColor="@android:color/black" android:id="@+id/tv_vehicle_number" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="DL2CAR1386" />
                <TextView android:textSize="@dimen/text_size_small_2" android:id="@+id/tv_vehicle_description" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="WagonR owned by xyz" />
            </LinearLayout>
            <ImageView android:layout_gravity="center" android:id="@+id/iv_delete" android:background="?attr/selectableItemBackground" android:padding="8dp" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@android:drawable/ic_menu_delete" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>