<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginEnd="4dp" style="@style/AppTheme.CardView"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <com.cuvora.carinfo.views.AsyncImageView android:id="@+id/iv_car_image" android:layout_width="fill_parent" android:layout_height="120dp" android:src="@drawable/placeholder" />
        <LinearLayout android:background="@drawable/drawable_transparent_background_gradient" android:paddingLeft="8dp" android:paddingBottom="8dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="-20dp">
            <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                <android.support.v7.widget.AppCompatTextView android:textSize="14sp" android:textColor="@color/white" android:ellipsize="end" android:id="@+id/tv_title" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="4dp" android:maxLines="2" />
                <android.support.v7.widget.AppCompatTextView android:textSize="12sp" android:textColor="@color/white" android:ellipsize="end" android:id="@+id/tv_subtitle" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:maxLines="1" />
            </LinearLayout>
            <android.support.v7.widget.AppCompatImageView android:layout_gravity="center" android:layout_width="30dp" android:layout_height="20dp" android:layout_marginRight="12dp" android:src="@drawable/ic_arrow_forward" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>