<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_centerInParent="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@+id/iv_title" android:layout_width="fill_parent" android:layout_height="80dp" android:src="@drawable/ic_background" android:scaleType="fitXY" android:layout_alignParentTop="true" />
    <TextView android:textSize="24sp" android:textStyle="bold" android:textColor="@color/white" android:gravity="center" android:id="@+id/tv_search_by_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/search_by_name" android:shadowColor="@color/white" android:layout_alignBottom="@+id/iv_title" android:layout_alignParentTop="true" android:layout_centerHorizontal="true" android:textAllCaps="true" />
    <TextView android:textSize="18sp" android:textColor="@color/app_text_dark_black_color" android:gravity="center" android:id="@+id/tv_detail_text" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="@string/reverse_search_detail" android:layout_below="@+id/tv_search_by_name" />
    <View android:id="@+id/v_space" android:background="@color/gray_dark" android:layout_width="fill_parent" android:layout_height="1dp" android:layout_marginLeft="20dp" android:layout_marginTop="20dp" android:layout_marginRight="20dp" android:layout_marginBottom="10dp" android:layout_below="@+id/tv_detail_text" />
    <android.support.v7.widget.AppCompatButton android:textColor="?attr/colorAccent" android:id="@+id/btn_try_now" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="@string/try_now" android:drawableLeft="@drawable/ic_search_name" android:drawablePadding="10dp" android:layout_below="@+id/v_space" android:layout_centerHorizontal="true" style="@style/Widget.AppCompat.Button.Borderless" />
</RelativeLayout>