<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="220dp" android:layout_height="wrap_content" android:foreground="?android:attr/selectableItemBackground" android:layout_marginEnd="4dp" style="@style/AppTheme.CardView"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <RelativeLayout android:layout_width="fill_parent" android:layout_height="100dp">
            <com.cuvora.carinfo.views.AsyncImageView android:id="@+id/iv_icon" android:layout_width="fill_parent" android:layout_height="fill_parent" android:scaleType="centerCrop" />
