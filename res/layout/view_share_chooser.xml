<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.AppCompatTextView android:textSize="20sp" android:textStyle="bold" android:textColor="@color/colorPrimary" android:padding="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/share_via" />
    <View android:background="@color/colorPrimary" android:layout_width="fill_parent" android:layout_height="4dp" />
    <LinearLayout android:id="@+id/bluetooth_share_ll" android:padding="20dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:foreground="?android:attr/selectableItemBackground">
        <ImageView android:layout_gravity="center_vertical" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_bluetooth" />
        <TextView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/bluetooth_sharing_text" />
    </LinearLayout>
    <View android:background="@color/colorPrimary" android:layout_width="fill_parent" android:layout_height="2dp" android:layout_marginLeft="30dp" android:layout_marginRight="30dp" />
    <LinearLayout android:id="@+id/whatsapp_share_ll" android:padding="20dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:foreground="?android:attr/selectableItemBackground">
        <ImageView android:layout_gravity="center_vertical" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_whatsapp" />
        <TextView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/whatsapp_sharing_text" />
    </LinearLayout>
    <View android:background="@color/colorPrimary" android:layout_width="fill_parent" android:layout_height="2dp" android:layout_marginLeft="30dp" android:layout_marginRight="30dp" />
    <LinearLayout android:id="@+id/other_share_ll" android:padding="20dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:foreground="?android:attr/selectableItemBackground">
        <ImageView android:layout_gravity="center_vertical" android:layout_width="50dp" android:layout_height="50dp" android:src="@drawable/ic_networking" />
        <TextView android:layout_gravity="center_vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:text="@string/other_sharing_text" />
    </LinearLayout>
</LinearLayout>