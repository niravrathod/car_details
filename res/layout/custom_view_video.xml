            <ImageView android:layout_width="fill_parent" android:layout_height="12dp" android:src="@drawable/gradient_white" android:layout_alignParentBottom="true" />
        </RelativeLayout>
        <TextView android:textSize="14sp" android:textColor="@color/app_text_dark_black_color" android:id="@+id/tv_heading" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:maxLines="2" android:minLines="2" />
    </LinearLayout>
</android.support.v7.widget.CardView>