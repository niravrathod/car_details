<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:background="@drawable/white_back_round" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <FrameLayout android:background="@drawable/gradient_featured_2" android:layout_width="fill_parent" android:layout_height="60dp">
        <android.support.v7.widget.AppCompatTextView android:textSize="20sp" android:textColor="@color/white" android:gravity="center" android:layout_width="fill_parent" android:layout_height="fill_parent" android:text="LICENCE HELP" android:maxLines="1" android:fontFamily="sans-serif-medium" />
        <android.support.v7.widget.AppCompatImageView android:layout_gravity="end" android:id="@+id/ivCancel" android:layout_width="60dp" android:layout_height="60dp" android:src="@drawable/ic_clear" android:scaleType="centerInside" android:tint="@color/white" />
    </FrameLayout>
    <android.support.v7.widget.AppCompatTextView android:textSize="16sp" android:textColor="#545454" android:paddingTop="10dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Your driving licence number can be found on licence card. It is in following format:" android:paddingStart="20dp" android:paddingEnd="20dp" />
    <android.support.v7.widget.AppCompatTextView android:textSize="18sp" android:textStyle="bold" android:textColor="#545454" android:gravity="center" android:layout_gravity="center" android:paddingTop="10dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="SS-DD-YYYY-CCCCCCCCC" android:paddingStart="20dp" android:paddingEnd="20dp" />
    <android.support.v7.widget.AppCompatTextView android:textSize="16sp" android:textColor="#545454" android:paddingTop="10dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text=" \\u2022 SS: Unique State Code (alphabetical)" android:paddingStart="20dp" android:paddingEnd="20dp" />
    <android.support.v7.widget.AppCompatTextView android:textSize="16sp" android:textColor="#545454" android:paddingTop="10dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text=" \\u2022 DD: Unique RTO Jurisdiction Code (Numeric)" android:paddingStart="20dp" android:paddingEnd="20dp" />
    <android.support.v7.widget.AppCompatTextView android:textSize="16sp" android:textColor="#545454" android:paddingTop="10dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text=" \\u2022 YYYY: Year of issue (Numeric)" android:paddingStart="20dp" android:paddingEnd="20dp" />
    <android.support.v7.widget.AppCompatTextView android:textSize="16sp" android:textColor="#545454" android:paddingTop="10dp" android:paddingBottom="20dp" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text=" \\u2022 CCCCCCCCC: Serial number of the licence issued in given state, RTO and year of issue." android:paddingStart="20dp" android:paddingEnd="20dp" />
</LinearLayout>