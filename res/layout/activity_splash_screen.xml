<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/colorPrimary" android:layout_width="fill_parent" android:layout_height="fill_parent" android:animateLayoutChanges="true"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView android:id="@+id/iv_logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="50dp" android:src="@drawable/ic_loader_logo" android:layout_centerInParent="true" />
    <ImageView android:id="@+id/iv_cuvora" android:layout_width="200dp" android:layout_height="50dp" android:src="@drawable/ic_rto_no_1_app" android:layout_above="@+id/iv_logo" android:layout_centerHorizontal="true" />
    <ImageView android:id="@+id/iv_carinfo" android:layout_width="180dp" android:layout_height="20dp" android:layout_marginTop="30dp" android:layout_marginBottom="20dp" android:src="@drawable/ic_carinfo" android:layout_below="@+id/iv_logo" android:layout_centerHorizontal="true" />
</RelativeLayout>